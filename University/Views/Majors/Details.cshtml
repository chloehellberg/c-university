@{
  Layout = "_Layout";
}

@using University.Models;
@model University.Models.Major;
@Html.ActionLink("Back to Majors", "Index", null, new { @class="btn btn-info" })
@Html.ActionLink("Edit Major", "Edit", new { id = Model.MajorId }, new { @class="btn btn-info" })
@Html.ActionLink("Delete Major", "Delete", new { id = Model.MajorId }, new { @class="btn btn-info" })
<h2>Major Details</h2>
<hr />
<h3>Major: @Html.DisplayFor(model => model.MajorName)</h3>
<p>Students in this Major:</p>
<ul>
@if (@Model.Students.Count == 0)
{
  <p>no students found</p>
}

@foreach (Student student in @Model.Students)
{
  <li>@student.Name</li>
}
</ul>
