@{
  Layout = "_Layout";
}

@model University.Models.Major
@Html.ActionLink(" All Majors", "Index", null, new { @class="btn btn-info fa fa-bookmark-o" })
<h2>Edit</h2>

<h4>Edit @Html.DisplayFor(model => model.MajorName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MajorId)
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.MajorName)</td>
      <td>@Html.EditorFor(model => model.MajorName)</td>
    </tr>
    <tr>
      <td>@Html.Label("Select Department")</td>
      <td>@Html.DropDownList("DepartmentId")</td>
    </tr>
  </table>
  <button type="submit" class="btn btn-info fa "><i class="fa-edit"> Save</i></button>
}