@{
  Layout = "_Layout";
}

@using University.Models;
@model List<University.Models.Major>;
@Html.ActionLink("Add new Major", "Create", null, new { @class="btn btn-info fa fa-plus-circle" })
@Html.ActionLink("Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
<h1>Majors</h1>

@if (@Model.Count == 0)
{
  <h3>No Majors have been added yet!</h3>
}
@foreach (Major major in Model)
{
  <li>@Html.ActionLink($"{major.MajorName}", "Details", new { id = major.MajorId })</li>
}