@{
  Layout = "_Layout";
}

@model University.Models.Student
@Html.ActionLink(" All Students", "Index", null, null, new { @class="btn btn-info fa fa-graduation-cap" })
<h2>Edit</h2>

<h4>Edit @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)
    <table>
      <tr>
        <td>@Html.LabelFor(model => model.Name)</td>
        <td>@Html.EditorFor(model => model.Name)</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.Date)</td>
        <td>@Html.EditorFor(model => model.Date)</td>
      </tr>
      <tr>
        <td>@Html.Label("Select Major")</td>
        <td>@Html.DropDownList("MajorId")</td>
      </tr>
    </table>
    <button type="submit" class="btn btn-info fa"><i class=" fa-edit"> Save</i></button>
}
