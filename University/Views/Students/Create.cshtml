@{
  Layout = "_Layout";
}

@model University.Models.Student
@Html.ActionLink("Show all students", "Index", null, new { @class="btn btn-info" })
<h4>Add a new student</h4>
@using (Html.BeginForm())
{
  <p>
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
  </p>
  <p>
    @Html.LabelFor(model => model.Date)
    @Html.TextBoxFor(model => model.Date)
  </p>
  <p>
    @Html.Label("Select department")
    @Html.DropDownList("DepartmentId")
  </p>
  <input type="submit" value="Add new student" class="btn btn-info" />
}