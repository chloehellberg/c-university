@{
  Layout = "_Layout";
}

@model University.Models.Student
@Html.ActionLink("Show all students", "Index", null, null, new { @class="btn btn-info fa fa-graduation-cap" })
<p>Add a new student</p>
@using (Html.BeginForm())
{
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.Name)</td>
      <td>@Html.TextBoxFor(model => model.Name)</td>
    </tr>
    <tr>
      <td>@Html.LabelFor(model => model.Date)</td>
      <td>@Html.TextBoxFor(model => model.Date)</td>
    </tr>
    <tr>
      <td>@Html.Label("Select Major")</td>
      <td>@Html.DropDownList("MajorId")</td>
    </tr>
  </table>
  <input type="submit" value="Add new student" class="btn btn-info fa fa-plus-circle" />
}