@{
  Layout = "_Layout";
}

@using University.Models;
@model List<University.Models.Student>;
@Html.ActionLink(" Add", "Create", null, null, new { @class="btn btn-info fa fa-plus-circle" })
@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No students have been added yet!</h3>
} 
<ul>
  @foreach (Student student in Model)
  {
    <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
  }
</ul>
