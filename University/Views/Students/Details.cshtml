@{
  Layout = "_Layout";
}

@model University.Models.Student;
@Html.ActionLink("Back to students", "Index", null, new { @class="btn btn-info" })
@Html.ActionLink("Edit student", "Edit", new { id = Model.StudentId }, new { @class="btn btn-info" })
@Html.ActionLink("Delete Student", "Delete", new { id = Model.StudentId }, new { @class="btn btn-info" })
<h2>@Html.DisplayNameFor(model => model.Name)'s Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Courses.Count == 0)
{
  <p>This student is not enrolled in any courses</p>
}
else
{
  <h4>Courses:</h4>
  <ul>
  @foreach(var join in Model.Courses)
  {
    <li>@join.Course.Name - 
    
      @using (Html.BeginForm("Completed", "Students"))
      {
        @if (@join.Completed == false)
        {
          @Html.Hidden("joinId", @join.CourseStudentId)
          <input type="submit" value="Complete" class="btn btn-info"/>
        }
        else
        {
          <span>Completed</span>
        }  
      } 
    </li>
  }
  </ul>
}