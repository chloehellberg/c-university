@{
  Layout = "_Layout";
}

@using University.Models;
@model List<University.Models.Department>;
@Html.ActionLink("Add", "Create", null, new { @class="btn btn-info fa fa-plus-circle" })
@Html.ActionLink("Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
<h1>Departments</h1>

@if (@Model.Count == 0)
{
  <h3>No departments have been added yet!</h3>
} 

@foreach (Department department in Model)
{
  <li>@Html.ActionLink($"{department.DepartmentName}", "Details", new { id = department.DepartmentId })</li>
}


